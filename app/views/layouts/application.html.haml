!!! Strict
%html{html_attrs}
  %head
    %title
      = escape_once( yield(:title) || t('site.name') )
    %meta{"http-equiv" => "Content-Type",       :content => "text/html; charset=utf-8"}
    %meta{"http-equiv" => "Content-Style-Type", :content => "text/css"}
    %meta{:name => "google-site-verification",  :content => yield(:google_verification) || ''}
    = stylesheet_link_tag 'smoothness/jquery-ui-1.8.5.custom.css', :media => :screen
    = stylesheet_link_tag 'blueprint/screen.css',                  :media => :screen
    = stylesheet_link_tag 'blueprint/plugins/buttons/screen.css',  :media => :screen
    = stylesheet_link_tag 'application.css',                       :media => :screen
    = stylesheet_link_tag 'blueprint/print.css',                   :media => :print
    = formtastic_stylesheet_link_tag
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint/ie.css'
    -# = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
    = javascript_include_tag :defaults
    = yield(:extended_javascript)

  %body
    #container.last
      %h1.last
        hello world!

    #content
      = yield

